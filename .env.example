# ================================
# WhatsApp Music Bot Configuration
# ================================

# Telegram API Credentials (Required)
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Phone Number (Required for first setup)
# Format: +country_code_phone_number
TELEGRAM_PHONE=+1234567890

# Telegram Authentication (Fill these after first run if needed)
# The bot will prompt for these during first setup
TELEGRAM_CODE=
TELEGRAM_PASSWORD=

# ================================
# Service Configuration
# ================================

# Main service port (WhatsApp bot)
PORT=5000

# Telegram bridge service port
TELEGRAM_PORT=8000

# Telegram bridge URL (adjust for production)
TELEGRAM_BRIDGE_URL=http://localhost:8000

# ================================
# Bot Configuration
# ================================

# Bot language (en, fr, ht)
BOT_LANGUAGE=en

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum reconnection attempts
MAX_RECONNECT_ATTEMPTS=5

# ================================
# Security & Rate Limiting
# ================================

# Rate limiting window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window
MAX_REQUESTS_PER_WINDOW=100

# Maximum music requests per user per window
MAX_MUSIC_REQUESTS=10

# Maximum game requests per user per window
MAX_GAME_REQUESTS=20

# ================================
# Audio Configuration
# ================================

# Maximum audio file size in MB
MAX_AUDIO_SIZE=50

# Audio download timeout in seconds
AUDIO_DOWNLOAD_TIMEOUT=60

# ================================
# Development/Production Settings
# ================================

# Environment (development, production)
NODE_ENV=development

# Enable debug mode
DEBUG=false

# Enable health check logging
HEALTH_CHECK_LOGGING=true

# Auto-restart on crash
AUTO_RESTART=true

# ================================
# External Services (Optional)
# ================================

# Custom VK Music Bot username (if different)
VK_BOT_USERNAME=@vkmusbot

# Custom error reporting service
ERROR_REPORTING_URL=

# Custom analytics service
ANALYTICS_URL=

# ================================
# Database Configuration (Future)
# ================================

# Database URL (for future features)
DATABASE_URL=

# Redis URL (for session storage in production)
REDIS_URL=

# ================================
# Deployment Configuration
# ================================

# For Render deployment
RENDER_EXTERNAL_URL=

# For Heroku deployment
HEROKU_APP_NAME=

# Custom domain
CUSTOM_DOMAIN=

# SSL configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ================================
# Monitoring & Logging
# ================================

# Log retention in days
LOG_RETENTION_DAYS=7

# Enable performance monitoring
PERFORMANCE_MONITORING=false

# Enable error tracking
ERROR_TRACKING=true

# Webhook URL for notifications
NOTIFICATION_WEBHOOK=

# ================================
# Feature Flags
# ================================

# Enable/disable specific features
FEATURE_MUSIC_SEARCH=true
FEATURE_GAMES=true
FEATURE_TICTACTOE=true
FEATURE_ROCK_PAPER_SCISSORS=true
FEATURE_AUTO_WELCOME=true
FEATURE_HELP_MENU=true

# ================================
# Advanced Configuration
# ================================

# WhatsApp connection timeout in seconds
WHATSAPP_CONNECT_TIMEOUT=60

# Telegram search timeout in seconds
TELEGRAM_SEARCH_TIMEOUT=30

# Maximum concurrent searches
MAX_CONCURRENT_SEARCHES=10

# Message processing delay in milliseconds
MESSAGE_PROCESSING_DELAY=100

# Game session cleanup interval in minutes
GAME_CLEANUP_INTERVAL=5

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30
